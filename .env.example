# .env.example - Rename this file to .env and fill in your values
# Do NOT commit the .env file to version control

# Telegram Configuration
TELEGRAM_BOT_TOKEN="YOUR_BOT_TOKEN_HERE"
TELEGRAM_DEFAULT_CHAT_ID="-1001234567890" # The default channel/group ID to send signals to

# Security
WEBHOOK_SECRET_KEY="YOUR_SECURE_SECRET_KEY_HERE"
# Comma-separated list of admin user IDs
# Example: ADMIN_USER_IDS="123456789,987654321"
ADMIN_USER_IDS="123456789"

# Rate Limiting & Controls
MAX_SIGNALS_PER_DAY=10
MIN_SECONDS_BETWEEN_SIGNALS=60

# Trading Hours (UTC time) - Leave blank to disable
# Example: TRADING_START_TIME="00:00"
TRADING_START_TIME="00:00"
TRADING_END_TIME="23:59"

# Server Configuration
HOST="0.0.0.0"
PORT=5000
# Enable Uvicorn's reloader for development. Causes issues with Telegram Bot if enabled.
RELOAD_UVICORN=False

# Paths
DB_PATH="trading_signals.db"
LOG_DIR="logs"

# Trading Server Configuration
# URL of the MT5Trader server. Use the public IP of your Windows server.
# IMPORTANT: Ensure port 8000 (or the port you configure in MT5Trader/config.ini) is open in your Windows Firewall.
TRADING_SERVER_URL="http://185.167.99.205:8000/signal"
# Secret key for the MT5Trader server (must match the key in its config.ini)
TRADING_SERVER_SECRET_KEY="f44ae16bc7f4e53c404307ad022a254cca0ef2484c683e87f584ddbd"

# Bot Settings
# "modern" = includes SL/TP levels. "classic" = includes daily stats.
SIGNAL_MESSAGE_STYLE="modern"

